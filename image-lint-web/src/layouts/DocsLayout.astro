---
import Layout from './Layout.astro'
import Header from '../components/Header.astro'
import '../css/variables.css';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
	<Header />
	<main>
		<slot />
	</main>
</Layout>
<style is:global>

pre {
	padding: 2em;
}

h1 {
	margin: 1em 0 0.5em;
}

h2 {
	margin: 1.6em 0 0.5em;
}

h3 {
	margin: 1.6em 0 0.5em;
}

p {
	line-height: 1.8;
	margin: 0.5em 0;
}

table {
	margin: 0 auto;
	background: #505050;
	border-collapse: collapse;
}

thead {
	background: #656565;
}

tbody tr:nth-child(even) {
	background: #434343;
}

th,
td {
	padding: 0.6em 1.2em;
/*	border: 1px solid black;*/
}

.toc {
	background: var(--color-layer-bg);
	padding: 1em;
	float: right;
	top: 0;	
	max-width: 30%;
	margin-right: 0;
}

.toc-level {
	list-style: none;
	margin: 0;
	padding: 0;
}

.toc-level .toc-level {
	padding-left: 0.6em;
}

.toc-link {
	display: block;
	padding: 0.4em;
	text-decoration: none;
}

.toc-link-h1 {
	font-weight: bold;
}

@media (width < 800px) {
	.toc {
		position: static;
		float: none;
	}
}
</style>